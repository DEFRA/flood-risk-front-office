
<div class="grid-row">
  <div class="column-two-thirds">

    <%= form.fields_for @form.model do |f| %>

      <header class="text">
        <h1 class="form-title heading-large" id="groupLabel">
          <%= set_page_title t('.heading') %>
        </h1>
      </header>

      <fieldset>
        <legend class="visuallyhidden"><%= t('.legend') %></legend>

        <!-- Local authority name -->
        <div class="form-group">
          <label class="form-label" for="authority-name"><%= t('.label') %></label>
          <p class="form-hint"><%= t('.para_text') %></p>
          <%#TODO: what is this field ? organisation.name ? = f.text_field 'authority_name', class:  'form-control' %>
        </div>
      </fieldset>

    <% end %>

  </div>
</div>


